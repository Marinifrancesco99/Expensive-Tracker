generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}





enum TipoTransazione {
  entrata
  uscita
}


model transazioni {
  id_transazione        Int                   @id @default(autoincrement())
  tipo                  TipoTransazione
  descrizione           String                @db.VarChar(255)
  importo               Decimal               @db.Decimal(10, 2)
  data_transazione      DateTime
  delete_1                Boolean               @default(false)
}